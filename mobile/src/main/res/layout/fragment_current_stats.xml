<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLabelCurrentDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/string_label_current_distance" />

            <TextView
                android:id="@+id/tvCurrentDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvLabelCurrentDistance"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLabelCurrentDistance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:gravity="center_horizontal"
                android:text="current_distance" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLabelCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/string_label_current_time" />

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvLabelCurrentTime"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLabelCurrentTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:gravity="center_horizontal"
                android:text="current_time" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLabelCurrentSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/string_label_current_speed" />

            <TextView
                android:id="@+id/tvCurrentSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvLabelCurrentSpeed"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLabelCurrentSpeed"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:gravity="center_horizontal"
                android:text="current_speed" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLabelCurrentCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/string_label_current_calories" />

            <TextView
                android:id="@+id/tvCurrentCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tvLabelCurrentCalories"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvLabelCurrentCalories"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:gravity="center_horizontal"
                android:text="current_calories" />
        </RelativeLayout>
    </TableRow>
</TableLayout>