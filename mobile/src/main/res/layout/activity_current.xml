<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mad.k00191419.prorun.activities.CurrentActivity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvLabelCurrentDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/string_label_current_distance"
                    android:textAppearance="@style/ProRunLabel" />

                <TextView
                    android:id="@+id/tvCurrentDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvLabelCurrentDistance"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvLabelCurrentDistance"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="38dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAppearance="@style/ProRunStatLabel" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvLabelCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/string_label_current_time"
                    android:textAppearance="@style/ProRunLabel" />

                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvLabelCurrentTime"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvLabelCurrentTime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="38dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAppearance="@style/ProRunStatLabel" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvLabelCurrentSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/string_label_current_speed"
                    android:textAppearance="@style/ProRunLabel" />

                <TextView
                    android:id="@+id/tvCurrentSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvLabelCurrentSpeed"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvLabelCurrentSpeed"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="38dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAppearance="@style/ProRunStatLabel" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvLabelCurrentCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/string_label_current_calories"
                    android:textAppearance="@style/ProRunLabel" />

                <TextView
                    android:id="@+id/tvCurrentCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tvLabelCurrentCalories"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tvLabelCurrentCalories"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="38dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAppearance="@style/ProRunStatLabel" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/ibStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ibStartPause"
            android:layout_marginEnd="70dp"
            android:background="@color/ap_transparent"
            app:srcCompat="@mipmap/stop" />

        <ImageButton
            android:id="@+id/ibStartPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="71dp"
            android:background="@color/ap_transparent"
            app:srcCompat="@mipmap/play" />

        <Button
            android:id="@+id/btnOpenMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="@string/string_btn_open_map" />
    </RelativeLayout>

</LinearLayout>
