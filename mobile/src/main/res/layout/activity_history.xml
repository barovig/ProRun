<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mad.k00191419.prorun.activities.HistoryActivity">

    <TextView
        android:id="@+id/tvLabelHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="17dp"
        android:text="@string/string_label_history"
        android:textColor="@color/ap_black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinHistoryPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvLabelHistory"
        android:layout_alignBottom="@+id/tvLabelHistory"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/lvHistoryRuns"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinHistoryPeriod"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
